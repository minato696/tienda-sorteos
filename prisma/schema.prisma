generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Participante {
  id           Int      @id @default(autoincrement())
  dni          String
  nombres      String
  apellidos    String
  telefono     String
  email        String
  departamento String
  tickets      Ticket[]
  creadoEn     DateTime @default(now())
}

model Ticket {
  id             Int      @id @default(autoincrement())
  codigo         String   @unique
  participante   Participante @relation(fields: [participanteId], references: [id])
  participanteId Int
}
